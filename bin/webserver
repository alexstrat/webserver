#! /usr/bin/env node
var Webserver = require('../lib/webserver').Webserver;

var webserver = new Webserver({
  name: 'hook.io-webserver',
  port: 9000,
  webroot: './public'
});

webserver.start();

webserver.on('ping', function (data, cb) {
  var place = function () {

    var item = places.shift();
    places.push(item);

    return item;
  }

  cb(null, place());
})

var places = [
  "world",
  "computer",
  "hook.io"
];
