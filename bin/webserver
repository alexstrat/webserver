#! /usr/bin/env node
var Webserver = require('../lib/webserver').Webserver;

var webserver = new Webserver({
  name: 'hook.io-webserver',
  webroot: './public'
});

webserver.start();

webserver.on('ping', function (data, cb) {
  var place = function () {

    var item = places.shift();
    places.push(item);

    return item;
  }

  cb(null, place());
})

setInterval(function() {
  webserver.emit('pong', null, function(err, res) {
    console.log(res);
  });
}, 3000);

var places = [
  "world",
  "computer",
  "hook.io"
];
