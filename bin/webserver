#! /usr/bin/env node
var Webserver = require('../lib/webserver').Webserver;

var webserver = new Webserver({
  name: 'hook.io-webserver',
  port: 9000,
  webroot: './public'
});



webserver.start();

webserver.on('ping', function (data, cb) {
  var place = function () {
    var places = [
      "world",
      "computer",
      "hook.io"
    ];

    return places[Math.floor(places.length * Math.random())];
  }

  cb(null, place());
})
