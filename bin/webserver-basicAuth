#! /usr/bin/env node
var Webserver = require('../lib/webserver').Webserver;

var webserver = new Webserver({
  name: 'hook.io-webserver',
  port: 9000,
  basicAuth: {
    "username":"admin",
    "password":"admin"
  },
  webroot: './public'
});

webserver.on('*::cakeRequest', function(options, callback){
  if(options === "Cake please?"){
    callback(null, 'nommnomnomnomn');
  } else {
    callback(null, 'NO CAKE FOR YOU');
  }
});


webserver.start();

